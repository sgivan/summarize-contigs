#seqsplit.pl -f contigs.fa -o toAlign.fa -O fasta -x $contignum -n $contignum
#mkdir -p mummer
#cd mummer
#ln -s ../toAlign.fa_1 ./contigs.fa
#ln -s ../../ref.fa ./
